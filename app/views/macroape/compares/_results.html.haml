.result_data
  .similarity
    .my-label Similarity:
    .value= task_results.similarity
    .download_results= download_link t('task_layout.download_results'), ticket, 'task_result.txt'
    .alignment_logo= show_image(ticket, 'alignment.png')
.input_data
  .row
    .matrix.span3
      .logo= show_image(ticket, 'first_direct.png')
      .my-label
        First PWM
        = download_list ticket, {'pcm' => 'first.pcm', 'ppm' => 'first.ppm', 'pwm' => 'first.pwm'}
      %pre= pwm_from_file('first.pwm', ticket).rounded(precision: 3)
    .matrix.span3
      .logo= show_image(ticket, "second_#{task_results[:orientation]}.png")
      .my-label
        Second PWM
        = download_list ticket, {'pcm' => 'second.pcm', 'ppm' => 'second.ppm', 'pwm' => 'second.pwm'}
      %pre= pwm_from_file('second.pwm', ticket).rounded(precision: 3)
  .row
    .span3
      = download_link t('task_layout.task_details'), ticket, 'task_params.yaml'
